mixin itemStoresSelector(item)
  .item__storesSelector
    span.mr1.mono.red from:
    - const stores = h.atStores(item.stores);
    each store in stores
      .item__storesSelector-storeWrapper
        input(type="checkbox" name=`${item.slug}-store` id=`${item.slug}-${store}` value=`${store}`).item__storesSelector-storeInput
        label(for=`${item.slug}-${store}`).item__storesSelector-storeLabel= store
