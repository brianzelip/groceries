include itemCheckboxAndText
include itemQtySelector
include itemStoresSelector
mixin list(item)

  form(action="/submit" method="POST")
    ol.list-reset.mb0.border.rounded
      each item in items
        li.item
          +itemCheckboxAndText(item)
          +itemQtySelector(item)
          if h.hasStore(item.stores)
            p YES THIS JAWN HAS A STORE!
          //- +itemStoresSelector(item)
    input(type="submit" value="Submit").mt2.col-12.btn.btn-primary.bg-blue.fw400

  script(src="js/numberInput.js")
