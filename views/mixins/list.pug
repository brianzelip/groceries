include itemCheckboxAndText
include itemQtySelector
include itemStoresSelector
include emailSelector
mixin list

  form(action="/submit" method="POST")
    ol.list-reset.border.rounded
      each item in items
        li.item
          +itemCheckboxAndText(item)
          +itemQtySelector(item)
          +itemStoresSelector(item)
    .controls.flex.flex-column.sm-flex-row.justify-between.flex-wrap
      .flex.flex-center.order-2.sm-order-1
        input(type="submit" value="submit").btn.btn-primary.bg-blue.fw400
        +emailSelector
      .mb2.sm-mb0.order-1.sm-order-2
        include ../includes/addItemBtn
