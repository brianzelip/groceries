mixin itemCheckboxAndText(item)
  a(href=`/edit/${item._id}`).w-16px.flex.flex-center.mx1.sm-mx2.grey
    != h.icon('edit-solid')
  input(class="item__hidden-input" type="checkbox" id=`${item.slug}` name="items" value=`${item.slug}`)
  label(for=`${item.slug}` class="item__label col-5")
    span(class="item__checkbox")
    span(class="item__text blue")= item.name