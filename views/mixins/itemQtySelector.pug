mixin itemQtySelector(item)
  //- pass this mixin: 1. the name of parent grocery item, and 2. num
  .item__qtySelector
    span.mr1.mono.red qty:
    - let [num, max] = [2,5];
      while num <= max
        .item__qtySelector-numWrapper
          input(type="radio" name=`${item.slug}` id=`${item.slug}-${num}` value=`${num}`).item__qtySelector-numInput
          label(for=`${item.slug}-${num}`).item__qtySelector-numLabel= num
        - num++